%dil




dilbegin packer(s :string);
var
        i : integer;
        pc : unitptr;
        enemy : unitptr;
code
{
        heartbeat := PULSE_SEC*35;
        :start:
        unsecure(pc);
        unsecure(enemy);
      wait(SFB_COM,(command(CMD_AUTO_COMBAT)) and
        (self.equip == WEAR_WIELD));

        pc := activator;
        enemy := self.outside.fighting;
        secure(enemy,lost);
        secure(pc,lost);
        i := rnd(1,100);
        if (i < 10)
         {
        act("Brown slimy stuff flies off $1n's  $2N and hits $3n in the "+
        "face.",A_SOMEONE, pc, self, enemy, TO_ALL);
         if(0==dilfind("stink@blcastle",enemy))
             {
              dilcopy(s,enemy);
              }
         goto start;
         }

        if (i < 15)
         {
        act("A strange odor wafts up from $1n's $2N.",
        A_SOMEONE, pc, self, enemy, TO_ALL);
        goto start;
           }
        if (i < 20)
         {
        act("A blob of brown matter drops from  $1n's $2N.",
        A_SOMEONE, pc, self, enemy, TO_ALL);
        goto start;
           }



:lost:
goto start;


}
dilend



dilbegin shitter();

 var
