dilbegin jump(); var
        pc : unitptr;
        pc_name : string;

code
{

:init:
heartbeat := PULSE_SEC*5;

:start:
       wait(SFB_CMD, (command("jump")) );
        block;
        pc := activator;
        secure(pc,losthim);
     {
      act("You jump out the opening at the end of the loft and aim for "+
      "the hay pile below."
      ,A_SOMEONE,pc,null,null,TO_CHAR);
     act("$1n jumps out the opening at the end of the loft to the pile "+
     "of hay below",
      A_SOMEONE,pc,null,null,TO_REST);
      pause;
      act("WWWWWWWWEEEEEEEEEEEEEEEEEE."
      ,A_SOMEONE,pc,null,null,TO_CHAR);

      pause;
      act("You land safety in the pile of hay."
      ,A_SOMEONE,pc,null,null,TO_CHAR);
      link(pc, findroom("wout_stable2@wcastle"));
      exec("look",pc);
      pause;
      unsecure(pc);
      goto start;
      }



:losthim:
goto start;
}
dilend

end

