			abyss
title "Falling Into the Abyss"
descr
"   Your mortal soul screams in terror as you plummet straight towards the
depths of hell.  The glimmering of the souls clinging to the edge of the
Abyss pass rapidly as you descend and the wails of the tormented are soon
your own.  You rapidly slip past the edge of insanity as the blackness of
the Abyss closes over your heart.  You pray to the gods of both darkness and
light that Mornick the Soul Overlord has not tricked you, and your mortal
soul will not be lost forever."

flags {UNIT_FL_NO_WEATHER, UNIT_FL_NO_TELEPORT}
movement SECT_CITY
ALWAYS_LIGHT

dilbegin enter_abyss();
var
  pc : unitptr ;
code {
  :init:
    heartbeat := PULSE_SEC*5 ;
  :start:
    wait (SFB_CMD, TRUE);
    pc := activator;
    secure (pc, lostpc);
    act("You are falling into the Abyss!!!", A_ALWAYS, self.inside, null,
	null, TO_CHAR);
    exec("scream", pc); pause;
    act("The vorpal winds whip past you as you plummet deeper into the Abyss.",
	A_ALWAYS, self.inside, null, null, TO_CHAR); pause;
    pc.endurance := 100;
    act("Your mortal flesh begins to give way as you descend.",
	A_ALWAYS, self.inside, null, null, TO_CHAR); pause;
    pc.endurance := 66;
    act("You can feel your soul being stripped bare and your grip on reality loosen.",
	A_ALWAYS, self.inside, null, null, TO_CHAR); pause;
    pc.endurance := 38;
    act("The darkness begins to envelope you as you continue to fall.",
	A_ALWAYS, self.inside, null, null, TO_CHAR); pause;
    pc.endurance := 13;
    act("Your last thoughts are 'Dear god!  Is there a bottom?'",
	A_ALWAYS, self.inside, null, null, TO_CHAR); pause;
    pc.endurance := 0;
    act("You slip into unconciousness........",
	A_ALWAYS, self.inside, null, null, TO_CHAR); pause;
    pc.hp :=  (pc.hp * 2)/9 ;
    link(pc, findroom("hades6/floor3"));
    act(pc.name+" plummets from above into the floor of the Abyss.",
	A_ALWAYS, self.inside, null, null, TO_REST);
    unsecure(pc);
    goto start;
  :lostpc:
    goto init;
}
dilend

end


