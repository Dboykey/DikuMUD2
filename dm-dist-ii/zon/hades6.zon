/*  Dil to gain entry onto Bridge of Faith */
/*  Dil modified from that in link room, created by A. Cowan (Icculus) */
dilbegin bridge1();
var
  pc : unitptr;
code {
  :init:
    heartbeat := PULSE_SEC*5;
  :start:
    wait (SFB_CMD, (activator.type == UNIT_ST_PC) and
	 (command(CMD_ENTER)));
    if (("abyss" in argument) or ("pit" in argument)) {
      pc := activator;
      secure(pc, lostpc);
      block;
      act("You step out into the Abyss!", A_ALWAYS, pc, null,
	   null, TO_CHAR);
      act("$1n steps out into the Abyss!", A_ALWAYS, pc, null,
	   null, TO_REST);
      act("$1n disappears from sight!", A_ALWAYS, pc, null,
	   null, TO_REST);
      pause;
      link(pc, findroom("hades6/bridge"));
      exec("look", pc);
      act(pc.name+" has arrived on the Bridge of Faith with you.", A_ALWAYS,
	   pc, null, null, TO_REST);
      unsecure(pc);
      goto start;
    }
  :lostpc:
    pause;
    goto start;
}
dilend

end

