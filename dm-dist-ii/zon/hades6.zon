  pcname : string;
  pc     : unitptr;
  i      : integer;
  expd   : extraptr;
code {
  :init:
    heartbeat := PULSE_SEC*4;
    on_activation((self.position <= POSITION_SLEEPING) or
      (self.position == POSITION_FIGHTING), skip);
  :start:
    wait(SFB_CMD,(activator.type == UNIT_ST_PC) and (not command(CMD_GIVE)));
    if ((MORNICK_COMPLETE in activator.quests))
      goto waitawhile;
    pc := activator;
    secure(pc,lostpc);
    if (not (MORNICK_ONGOING in pc.quests)) {
      pause;
      exec("emote howls with fury.", self); pause;
      exec("say Mortals!  Here in my realm!  How dare you!", self); pause;
      exec("growl", self); pause;
      exec("say I shall cast your immortal soul into the very Abyss itself!", self); pause;
      exec("emote prepares to destroy your immortal soul!", self);
      exec("say Run for your life little mortal!", self);
      pause;
      exec("emote waits for you to run.", self); pause;
      exec("emote looks puzzled.", self);
      pause;
      exec("say You do not seem afraid...", self); pause;
      exec("emote seems duly impressed!", self);
      pause;
      exec("say But now that you have come, I wonder what it is that you might want?", self);
      pause;
      exec("ponder", self); pause;
      exec("grin "+pc.name, self); pause;
      exec("say Is it possible that you wish to find the bottom of "+
	   "the Abyss?", self); pause;
      exec("moo", self); pause;
      exec("say Perhaps then we can assist each other mortal...", self); pause;
      exec("say I suggest that you nod your agreement!", self);
      exec("grin "+pc.name, self); pause;
      i := 0;
      while (i < 3) {
	wait(SFB_CMD, activator #= pc);
	if (command(CMD_NOD))
	  goto quest_accept;
	if (command(CMD_SAY)) {
	  pause;
	  exec("say Nod if you accept mortal.", self);
	}
	if (command(CMD_SHAKE))
	  goto quest_refuse;
	i := i+1;
      }
      :quest_refuse:
	pause;
	exec("emote howls with renewed fury!", self); pause;
	exec("say You have closed your fate mortal!", self); pause;
	exec("kill "+pc.name, self);
	unsecure(pc);
	goto waitawhile;
      :quest_accept:
	pause;
	exec("moo", self); pause;
	addextra(pc.quests, {MORNICK_ONGOING}, "");
	exec("say Delightful!", self); pause;
	exec("emote grins evilly at you.", self); pause;
	exec("say Bring me a crown fit for a king and a robe fit for a goddess. Then, " +
	"perhaps, I will help you discover the secret of the Abyss!", self); pause;
	exec("cackle", self); pause;
	exec("emote waits for you to begin your quest.", self); pause; pause;
	exec("emote roars at you.", self); pause;
	exec("say Go now mortal!  Before I decide to toss you in anyway!", self);
	unsecure(pc);
	goto start;
    }
    else {
      expd := MORNICK_ONGOING in pc.quests;
      if (("golden crown" in expd.names) and ("blue robe" in expd.names)) {
	pause;
	subextra(pc.quests, MORNICK_ONGOING);
	addextra(pc.quests, {MORNICK_COMPLETE}, ""); pause;
	exec("moo", self); pause;
	exec("say I would bet the King thought he was safe from me too...", self); pause;
	exec("say And that goddess de-robed! A pretty sight indeed I'll wager!", self); 
	pause;
	exec("grin "+pc.name, self); pause;
	exec("say And now for you my little mortal, I must thank you.", self); pause;
	exec("say You have sold your soul to Satan himself with this "+
	     "crown and that robe.", self); pause;
	exec("say And to the depths I shall send you!", self); pause;
	exec("cackle", self); pause;
	exec("say You now have my protection as you descend the Abyss.", self); pause;
	exec("say Seek out my minion Vasslius to help you on your way.", self); pause;
	exec("say And hope I don't forget to save your soul when you reach the bottom!", 	self); pause;
	exec("moo", self); pause; pause;
	experience(3000, pc);
      }
    }
    unsecure(pc);
    goto start;
    :waitawhile:
      heartbeat := PULSE_SEC*30;
      pause;
      goto init;
    :lostpc:
      exec("say Pitiful mortal!  Run for your life!!!", self); pause;
      exec("moo", self);
      goto start;
}
dilend

