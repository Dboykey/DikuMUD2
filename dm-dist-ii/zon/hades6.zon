/*  Dil to gain entry into hades7 */
/*  Dil modified from that in link room, created by A. Cowan (Icculus) */
dilbegin floor1();
var
  pc : unitptr;
code {
  :init:
    heartbeat := PULSE_SEC*5;
  :start:
    wait (SFB_CMD, (activator.type == UNIT_ST_PC) and
	 (command(CMD_ENTER)));
    if (("vortex" in argument) or ("soul vortex" in argument) or
	 ("kalyans ass" in argument)) {
      pc := activator;
      secure(pc, lostpc);
      block;
      act("You enter the Soul Vortex.", A_ALWAYS, pc, null,
	   null, TO_CHAR);
      act(pc.name+" enters the Soul Vortex.", A_HIDEINV, pc, null,
	   null, TO_REST);
      exec("scream", pc);
      pause;
      link(pc, findroom("hades6/done"));
      exec("look", pc);
      act(pc.name+" has arrived.", A_HIDEINV, pc,
	   null, null, TO_REST);
      unsecure(pc); }{
      goto start; }

  :lostpc:
    pause;
    goto start;
}
dilend
end

