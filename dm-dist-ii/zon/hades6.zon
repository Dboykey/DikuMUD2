dilbegin recall aware love();
var
	i : integer;
	enemy :unitptr;
	n:integer;
	charge:integer;
	pwr:integer;
code
{
   pwr := 10;
   :init:
   heartbeat := PULSE_SEC*5;
  charge := interrupt (SFB_MSG,((self==activator) and
				(argument=="add charge")), charge);
   :start:
   wait (SFB_CMD,( command(CMD_EMOTE) and ("see" in argument)
		  and ("heal" in argument) and
		  (self.equip==WEAR_SHIELD) ) );
   block;
   enemy := self.outside.fighting;

   if (enemy==null)
     goto no_person;

   secure (enemy,start);
   if (pwr<=0) goto fail;
   pwr := pwr-1;
   i := rnd (35,110);
   if (i < self.outside.skills[SKI_SHIELD])
   {
     n:= cast_spell (SPL_CURE_WOUNDS_1,self.outside,self,self.outside,"bani_aff@hades6");
   }
   else
   {
      act ("You are just not cool enough. ",
	   A_SOMEONE,self.outside,enemy,self,TO_CHAR);
      act ("$1n is just not cool enough.",
	   A_SOMEONE,self.outside,enemy,self,TO_VICT);
      act ("The Banick spits in your face heckling loser loser loser.",
	   A_SOMEONE,self.outside,enemy,self,TO_NOTVICT);
   }
   goto start;

   :fail:
   act ("The Banick doesn't quite have the power to help you yet.",
	A_SOMEONE,self.outside,enemy,self,TO_CHAR);
   goto start;

   :charge:
   clear (charge);
   if (pwr<12)
     pwr := pwr+4;
   goto init;
   goto start;
   :no_person:
   act ("Nothing by that name here.",
	A_ALWAYS,self.outside,null,null,TO_CHAR);
   goto start;
}
dilend

dilbegin no_wear();
var
  u2   : unitptr;
  u1   : unitptr;

code {
   :init:
   heartbeat := PULSE_SEC*3;

   :start:
   wait(SFB_CMD, (activator.type == UNIT_ST_PC) and
		 command(CMD_WEAR) and (activator == self.outside));

   u1 := findunit(activator, "Deshpande",
		  FIND_UNIT_EQUIP, null);

   u2 := findunit(activator, "Deshpande",
		  FIND_UNIT_INVEN, null);

   if (("all" in argument) and (u1 == null))
   {
      if (u2 != null) {
	 block;
	 act("You are slapped by your sword Deshpande.  Your Deshpande wants to be wielded first!",
	     A_ALWAYS, self.outside, null, null, TO_CHAR);
	 goto start;
      }
      else
      {
	 block;
	 act("Your Banick falls to the ground in depression.",
	     A_ALWAYS, self.outside, null, null, TO_CHAR);
	 link(self, self.outside.outside);
	 goto start;
      }
   }

   if (findunit(activator, argument, FIND_UNIT_INVEN, null) != self)
     goto start;

   if (u1 == null)
   {
      block;
      act("$1n's Banick Shield longs for its soul mate and falls to the ground in depression.",
	  A_HIDEINV, self.outside, null, null, TO_REST);
      act("Your Banick Shield longs for its soul mate and falls to the ground in depression.",
	  A_ALWAYS, self.outside, null, null, TO_CHAR);
      link(self, self.outside.outside);
      goto start;
   }
}
dilend

dilbegin no_remove();
var
  pc   : unitptr;
  u1   : unitptr;

code {
   :init:
   heartbeat := PULSE_SEC*3;

   :start:
   wait (SFB_CMD, (activator.type == UNIT_ST_PC) and
	 command(CMD_REMOVE));

    u1 := findunit(activator, "Deshpande",
		   FIND_UNIT_EQUIP, null);

    if (findunit(activator, argument, FIND_UNIT_EQUIP, null) != self)
      goto start;

   if (not (u1 #= null))
   {
      act("$1n's Banick Shield longs for its soul mate and falls to the ground in depression.",
	  A_HIDEINV, self.outside, null, null, TO_REST);
      act("Your Banick Shield longs for its soul mate and falls to the ground in depression.",
	  A_ALWAYS, self.outside, null, null, TO_CHAR);
      link(self, self.outside.outside);
      goto start;
   }
}
dilend
