names {"boat","strange boat"}
title "a strange boat"
descr
"A strange boat lies here."
inside_descr
"You are inside the stange boat."

manipulate {MANIPULATE_TAKE, MANIPULATE_ENTER}
flags {UNIT_FL_TRANS}
type ITEM_BOAT
weight 20
capacity 2000
cost 2 GOLD_PIECE
rent 100 PLATINUM_PIECE
extra {}
"The boat looks very light, and yet strong."
extra {"$identify"}
"The boat has been made from wight-skin and is the only possible
means of transportation past the river in Wight Warrens."


dilbegin strange_boat();
external
  unitptr unit_room@basis(u : unitptr);

var
  u : unitptr;
code
{
   wait(SFB_MSG, TRUE);

   if ((activator.nameidx == "bowl") and (activator.zoneidx == "ww1"))
   {
      u := unit_room@basis(self.outside);

      if (u.zoneidx != activator.zoneidx)
      {
	 act("When you come to your senses, you notice that "+
	     "the strange boat is gone.", A_ALWAYS,
	     self.outside, null, null, TO_CHAR);
	 destroy(self);
      }
   }
}
dilend
end

