                stone_render
names {"stone-render","render","creature"}
title "the Stone-Render"
descr "A huge stone creature is clumsily and confusedly walking around here."
extra {}
"The creature looks very stupid, but has several nasty-looking tentacles,
and seems to harbour some unknown power. Also, it is fairly large, and
its skin looks tough."

M_STONE_RENDER(SEX_NEUTRAL)
level 25
money 3 SILVER_PIECE, 1 COPPER_PIECE

dilbegin stone_render();
var
   render1 : unitptr;
   render2 : unitptr;
   u       : unitptr;
   i       : integer;
code
{
   heartbeat := PULSE_SEC * 4;

   :pre:
   unsecure(render1);
   unsecure(render2);

   wait(SFB_CMD | SFB_MSG, TRUE);

   if (not command(CMD_AUTO_MSG))      /* if command */
   {
      send("1");
      goto pre;
   }
   else if (activator.idx != self.idx) /* if message */
     goto pre;

   i := atoi(argument) + 1;

   if (i < 3)
   {
      send(itoa(i));
      goto pre;
   }

   /* Hey, we now have a master which can control all the renderers! */

   i := 0;

   foreach (UNIT_ST_NPC, u)
   {
      if (u == self)
	continue;

      if (u.idx == self.idx) /* A stone renderer */
      {
	 if (i == 0)
	 {
	    render1 := u;
	    secure(render1, pre);
	    i := i + 1;
	 }
	 else
	 {
	    render2 := u;
	    secure(render2, pre);
	    i := i + 1;
	    break;
	 }
      }
   }

   pause;

   act("Two of the Stone-Renders join tentacles.",
       A_HIDEINV, self, null, null, TO_ROOM);

   pause;

   act("The third of the Stone-Renders joins with the others.",
       A_HIDEINV, self, null, null, TO_ROOM);

   pause;

   act("The Stone-Renders form a menacing circle.",
       A_HIDEINV, self, null, null, TO_ROOM);

   while (TRUE)
   {
      pause;

      act("The circle of Renders sends out a terrible flash of lightning.",
	  A_HIDEINV, render1, null, null, TO_ROOM);

      foreach (UNIT_ST_PC, u)
      {
         if (u == self)
           continue;

	 if (u.level >= 200)
	 {
	    act("$1n nonchalantly waves his hand, and the lightning passes "+
		"through $1m.", A_HIDEINV, u, null, null, TO_ROOM);
	    act("The Renders try their feeble lightning at you, but you make"+
		" it pass through you.", A_HIDEINV, u, null, null, TO_CHAR);
	 }
	 else
	 {
	    i := cast_spell(SPL_LIGHTNING_3, self, self, u, "");
	 }
      }
   }
}
dilend
end



