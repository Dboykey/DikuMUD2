dilbegin raver();
var
   buf  : string;
   vict : unitptr;
   u    : unitptr;
   ch   : unitptr;
   hm   : integer;

code
{
   :restart:
   heartbeat := PULSE_SEC * 15;
   wait(SFB_CMD, activator.type == UNIT_ST_PC);

   vict := activator;

   while (vict.master and (vict.master.outside == self.outside))
     vict := vict.master;

   if (vict.level >= IMMORTAL_LEVEL)
     goto longpause;

   /* Base save on brain and charisma */

   hm := 2*55 - vict.abilities[ABIL_CHA]
              - vict.abilities[ABIL_BRA] + rnd(1,100);

   if (hm < 100)
   {
      act("Another will just attempted to posses you!",
	  A_ALWAYS, vict, null, null, TO_CHAR);

      goto longpause; /* Possession failed.. */
   }

   foreach (UNIT_ST_PC, u)
     if (u != vict)
       goto morethanone;

   goto restart;

   /* We are about to posses 'vict' */

   :morethanone:
   block;

   act("$1n suddenly jerks his head back in a nervous spasm.",
       A_HIDEINV, vict, null, null, TO_ROOM);

   act("A powerful will imposes itself on yours. You are possessed!",
       A_ALWAYS, vict, null, null, TO_CHAR);

   secure(vict, longpause);

   on_activation(vict.position <= POSITION_SLEEPING, skip);

   :possesed:
   wait(SFB_TICK | SFB_CMD, TRUE);

   if (command(CMD_AUTO_TICK))
   {
      on rnd(0,10) goto case0, case1, case2, case3, case4, case5, case6,
                        case7, case8, case9, case10;

      :case0:
      act("You feel like cackling...", A_ALWAYS, vict, null, null, TO_CHAR);
      exec("cackle", vict);
      goto possesed;

      :case1:
      act("You see the power gained by this experience!",
	  A_ALWAYS, vict, null, null, TO_CHAR);
      exec("grin", vict);
      goto possesed;

      :case2:
      act("You feel like someone is staring at you...",
	  A_ALWAYS, vict, null, null, TO_CHAR);
      exec("glare", vict);
      goto possesed;

      :case3:
      act("You feel powerful... Oh, so powerful!",
	  A_ALWAYS, vict, null, null, TO_CHAR);
      exec("say I feel alive! SO ALIVE!", vict);
      goto possesed;

      :case4:
      act("You just LOVE the EVIL...",
	  A_ALWAYS, vict, null, null, TO_CHAR);
      exec("say Oh, I so love the EVIL of the world!", vict);
      goto possesed;

      :case5:
      ch := findrndunit(vict, FIND_UNIT_SURRO, UNIT_ST_PC | UNIT_ST_NPC);
      if (ch)
      {
	 act ("You feel a need to slap $3n.",
	      A_HIDEINV, vict, null, ch, TO_CHAR);
	 exec("slap "+ch.name, vict);
      }
      goto possesed;

      :case6:
      ch := findrndunit(vict, FIND_UNIT_SURRO, UNIT_ST_PC | UNIT_ST_NPC);
      if (ch)
      {
	 act("You want to spit on $3n.",
	     A_HIDEINV, vict, null, ch, TO_CHAR);
	 exec("spit "+ch.name, vict);
      }
      goto possesed;

      :case7:
      ch := findrndunit(vict, FIND_UNIT_SURRO, UNIT_ST_PC | UNIT_ST_NPC);
      if (ch)
      {
	 act ("You feel an urge to insult $3n.",
	      A_HIDEINV, vict, null, ch, TO_CHAR);
	 exec("insult "+ch.name, vict);
      }
      goto possesed;

      :case8:
      ch := findrndunit(vict, FIND_UNIT_SURRO, UNIT_ST_PC | UNIT_ST_NPC);
      if (ch)
      {
	 act ("You feel like glaring at $3n.",
	      A_HIDEINV, ch, null, vict, TO_CHAR);
	 exec("glare "+ch.name, vict);
      }
      goto possesed;

      :case9:
      :case10:
      ch := findrndunit(vict, FIND_UNIT_SURRO, UNIT_ST_PC | UNIT_ST_NPC);
      if (ch and (ch.position != POSITION_FIGHTING))
      {
	 act ("Your other will wants to kill $3n.",
	      A_HIDEINV, vict, null, ch, TO_CHAR);
	 exec("kill " + ch.name, vict);
      }
      goto possesed;
   }

   /* SFB_CMD: */

   if (activator != vict)
     goto possesed;

   if (command(CMD_LOOK) or command(CMD_SCORE) or
       command(CMD_GET)  or command(CMD_KILL)  or
       command(CMD_EAST) or command(CMD_CAST))
   {
      act("You are possessed, your other will won't let you do this!",
	  A_HIDEINV, vict, null, null, TO_CHAR);
      block;
   }
   goto possesed;

   :longpause:
   heartbeat := PULSE_SEC * 120;
   pause;
   goto restart;
}
dilend
end


