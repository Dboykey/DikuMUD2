dilbegin recall aware sword_slice();
var
        i : integer;
        enemy : unitptr;
        n : integer;
        charge : integer;
        pwr : integer;
        recharge : integer;
        sword_skill : integer;

code
{
pwr:=10;
:init:
        heartbeat := PULSE_SEC*3;
charge:=interrupt (SFB_MSG,((self==activator) and
	(argument=="add charge")), charge);
:start:
wait (SFB_CMD,(command ("slice")) and
			(self.equip==WEAR_WIELD));
block;
heartbeat := PULSE_SEC*3;
sword_skill := self.outside.weapons[WPN_GREAT_SWORD];
enemy:=findunit (self.outside,argument,FIND_UNIT_SURRO,null);
if ((enemy==null) and( self.outside.fighting!=null))
enemy:=self.outside.fighting;
if (enemy==null) goto no_person;
secure (enemy,start);



if (pwr<=0) goto fail;
pwr:=pwr-1;
i := rnd (45,110);
if (i < sword_skill)

	 {
          n:=cast_spell(SPL_ACIDBALL_1, self.outside, self,enemy, 
"sword_aff@center");
         }
else
 	{
         act ("You try despratley to slice $2n. But you split the air "+
"with a wild slash", A_SOMEONE,self.outside,enemy,self,TO_CHAR);
         act ("$1n tries slice you, but $1e splits the air with a wild "+
"slash.", A_SOMEONE,self.outside,enemy,self,TO_VICT);
         act ("$1n tries to slice $2n, but $1e splits the air with a wild "+
"slash.", A_SOMEONE,self.outside,enemy,self,TO_NOTVICT);
	}
goto start;

	:fail:
        act ("You must wait for your weapon to be regenerated.", 
A_SOMEONE, self.outside,enemy,self,TO_CHAR);
        goto start;

:charge:
clear (charge);
if (pwr<12)
 pwr:=pwr+1;
 goto init;
  goto start;
:no_person:
act ("Nothing to slice by that name here.", A_ALWAYS, self.outside, null, null, TO_CHAR);
goto start;
}
dilend

dilbegin sword_death();
var

        limb : unitptr;
        targ : unitptr;
        whichlimb : integer;
code
{
        heartbeat := PULSE_SEC*3;
        :start:
        targ:=self.outside.fighting;
        wait(SFB_COM, command(CMD_AUTO_COMBAT) and
                (self.equip == WEAR_WIELD) and
                (self.outside.fighting.hp < 10));
        act("$1n superbly gashes $3n, cleaving off a limb!!!!", A_SOMEONE,
self.outside, self, self.outside.fighting, TO_NOTVICT);
        act("Your $2N gashes $3n and cleaves off a limb!!!!", A_ALWAYS,
self.outside, self, self.outside.fighting, TO_CHAR);
        act("Excruciating pain engulfs your body.", A_ALWAYS, self.outside,
self, self.outside.fighting, TO_VICT);
        act("You realize now that one of your limbs has been cleaved off.", 
A_ALWAYS, self.outside, self, self.outside.fighting, TO_VICT);
        whichlimb := rnd (1,2);
        if (whichlimb == 1)
	  {
           limb:=load("limb_arm@center");
                   limb.title := "The severed arm of "+self.outside.fighting.name;
           limb.outside_descr := "The bloodied arm of " +self.outside.fighting.name;
           link (limb, self.outside.outside);
          }
	  if (whichlimb == 2)
	  {
           limb:=load("limb_leg@center");
           limb.title := "The severed leg of "+self.outside.fighting.name;
           limb.outside_descr := "The bloodied leg of " +self.outside.fighting.name;
           link (limb, self.outside.outside);
          }
        targ.hp := -50;
        pause;
        goto start;
}
dilend
end

