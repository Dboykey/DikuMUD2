alignment  1000
sex SEX_MALE
MSET_ABILITY(10,10,10,20,20,5,20,5)
MSET_WEAPON(5,5,5,5,20,5)
MSET_SPELL(0,0,0,5,5,5,5,5,5,5,20)
position POSITION_STANDING
default POSITION_STANDING
special SFUN_GUARD_WAY_LEVEL "1@pal3@1-44@$1n stops you. @$1n
 prevents $3n from continuing because $3n is not powerful enough"

dilcopy combat_mag@function("acid ball","",0,4);

dilbegin michael();
var
  pcname : string;
  item   : unitptr;
  pc     : unitptr;
  i      : integer;
  exdp   : extraptr;

code
{

   :init:
   heartbeat := PULSE_SEC*5;

:start:
wait(SFB_CMD,(activator.type == UNIT_ST_PC) and (not command(CMD_GIVE)));
pc := activator;
secure(pc, lostpc);
if (pc.level < 44)
  goto waitawhile;

if ((not(ROD_COMPLETE in pc.quests)) and (not(ROD_ONGOING in pc.quests)))
{
exec("say Welcome to my humble haven away from the rest of the world.",
self);

 pause;
 exec("say I have been waiting a long time for a worthy adventurer to
assist"+
        " me.", self);
pause;

exec("say I need someone who has had seen many battles to destroy an evil"+
        " foe.", self);
pause;

exec("say I am able to keep these evil entities in the center of the earth"
+
     " by the magic from my garden, however I am too old to rid the"+
     " world of this terrible nuisance", self);
   pause;

   exec("say You must seek out the four elemental vortices and get their "
+
        "ruling rods from each of them.", self);
   pause;

   exec("say These rods when joined with the magical hilt from the beast
in" +
        " the center of the world will create a massive weapon which will
"+
        "assist you in your adventuring days before you retire such as" +
        " I did.",self);
  pause;

 exec("say The first rod is from the earth vortex.  He rules the elemental
"+
        "plane of earth.", self);
   pause;

 exec("say The second rod is held by air vortex.  He is in command of the
"+
      "elemental plane of air.",self);
   pause;
   exec("say The third rod is on the water vortex.  He commands all of
the"+
        " water plane. ", self);
   pause;

   exec("say and final rod is with the fire vortex.  He is the most
powerful"+
     " of the vortices and can be found in the closest plane to the center
of"+
        " the earth.", self);
   pause;

   exec("say The hilt you need to find at the centermost point in the
world"+
        "... Be careful though...A massive creature holds this last
item.",self)
;

   exec("say Bring me these five items, and I will be able to help you make
a"+
         " weapon of immense power.", self);
   pause;

   exec("say If you feel you are up to this task, please nod.", self);


i := 0;
while (i < 5)
{
   wait(SFB_CMD, activator #= pc);

   if (command(CMD_NOD))
   {
      goto quest_accepted;
   }
   else if (command(CMD_SAY))
   {

        pause;
        exec("say Nod if you accept this quest, shake your head " +
             "if you feel you are not worthy at this time.", self);
   }
   else if (command(CMD_SHAKE))

     goto no_quest;

   i := i+1;
}

:no_quest:
pause;
exec("say Very well. Perhaps, you are not worthy of this challenge.",
self);
unsecure(pc);
goto waitawhile;


:quest_accepted:
pause;
exec("say Excellent! I knew you would be willing. You must bring me those "
+
     "components and then I shall attempt to make you that weapon.", self);
pause;

addextra(pc.quests, {ROD_ONGOING}, "");
unsecure(pc);
goto start;

}

else
{
   exdp := ROD_ONGOING in pc.quests;

   if (("hilt" in exdp.names) and ("firerod" in exdp.names) and
       ("waterrod" in exdp.names) and ("earthrod" in exdp.names)
        and ("airrod" in exdp.names))
   {
      pause;
      subextra(pc.quests, ROD_ONGOING);
      addextra(pc.quests, {ROD_COMPLETE}, "");
      exec("emote takes all five items and places them into a bag.", self);
      pause;

   exec("say You have proved that you are the best of warriors in riding
the"+
           " underworld of those menaces", self);
     pause;

   exec("say and now here is your reward for defeating the massive
elemental"+
        " dragon",self);
     pause;

      item := load("sword_truth@center");
      item.height := pc.height;
      link(item, pc);
      experience(3500, pc);
      exec("say I also have this powerful item, which shall assist you in
the future",self);
      item := load("belt_power@center");
      item.height := pc.height;
      link(item,pc);
      exec("Use these items well, they shall assist you.",self);
      pause;

      exec("say Good luck to you, you certainly are a brave one!", self);

     exec("wave", self);
                }
}

unsecure(pc);
goto start;


:waitawhile:
heartbeat := PULSE_SEC*60;
pause;
goto init;


:lostpc:
exec("say Now I may never find someone worthy!", self);
pause;
exec("sigh", self);
goto start;


}
dilend


dilbegin michael2();
var
  pc     : unitptr;
  item   : unitptr;
  exdp   : extraptr;

code
{
   heartbeat := PULSE_SEC*5;

:start:
wait(SFB_CMD, (command(CMD_GIVE) and (activator.type == UNIT_ST_PC)));


:give:
if (not (ROD_ONGOING in activator.quests))
  goto start;


pc := activator;
item := self.inside;
secure(pc, labsecure);
secure(item, labsecure);

wait(SFB_CMD | SFB_TICK, TRUE);

if (not (item #= self.inside))
{
   unsecure(item);
   exdp := ROD_ONGOING in pc.quests;

   if ("earthrod" in self.inside.name)
   {
    addstring(exdp.names, "earthrod");
    exec("say Obtaining this rod must have been the first of many
challenges " +
       "that you managed to over come in here.", self);
      destroy(self.inside);
}
else if ("hilt" in self.inside.name)
  {
   addstring(exdp.names, "hilt");
   exec("say This is the most impressive feat you have ever accomplished.",
self
);
      destroy(self.inside);
}

else if ("waterrod" in self.inside.name)
{
   addstring(exdp.names, "waterrod");
   exec("say The Water Vortex must have given you quite a battle!",
        self);
   destroy(self.inside);
 }
else if ("firerod" in self.inside.name)
{
   addstring(exdp.names, "firerod");
   exec("say I doubt the Fire Vortex gave this willing to you!",
        self);

   destroy(self.inside);
}
else if ("airrod" in self.inside.name)
{
   addstring(exdp.names, "airrod");
   exec("say This must have been difficult to take from the Air Vortex!",
        self);
   destroy(self.inside);
}
else
{
  exec("say I did not ask you for this "+pc.name +"?", self);
  pause;
  exec("say Here you go.", self);
  link(self.inside, pc);
   }
}
unsecure(pc);




if ((command (CMD_GIVE)) and (activator.type == UNIT_ST_PC))
{
   goto give;
}
else
  goto start;

:labsecure:
exec("say So much for that, not much of a hero anyway.", self);
goto start;
}
dilend

