dilbegin replace_sword();
var

        pcname :        unitptr;
        item   :        unitptr;
        pc     :        unitptr;
        i      :        integer;
        exdp   :        extraptr;
code
{
on_activation((self.position <= POSITION_SLEEPING) or (self.position ==
POSITION_FIGHTING),skip);
:init:
heartbeat := PULSE_SEC*5;
:start:
wait(SFB_DONE, activator.type & UNIT_ST_PC);
pc:=activator;
secure(pc,lostpc);
if(KATANA_REPLACED in pc.quests)
 {
  unsecure(pc);
  goto start;
 }
 else if(ROD_COMPLETE in pc.quests)
 {
  addextra(pc.quests, {KATANA_REPLACED}, "");
  exec("say Hello adventurer.",self);
  pause;
  exec("say I finally have had the Sword of Truth repaired for you.",self);
  pause;
  exec("say Im sorry it took so long, I have been very busy.",self);
  pause;
  item := load("sword_truth@center");
  item.height := pc.height;
  link(item,pc);
  exec("say I magically placed the sword in your inventory, use it
well.",self);
  unsecure(pc);
  goto start;
 }
else
{goto start;}
:lostpc:
exec("say Too bad, its a powerful weapon, stick around next time!",self);
goto start;

}
dilend
end








