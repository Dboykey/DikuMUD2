special SFUN_PAIN_INIT time WAIT_SEC*20 bits SFB_RANTIME
" 100 S2000@
  110 APtha bows most humbly towards you, tears welling in her eyes.@
  120 Csay Oh, please.... I am in need of a champion! They have taken my child from me, and Kuh is going to sacrifice him to Ulchonix! You must save him!@
  130 Csay The sacrifice is at noon.... oh please rescue my child and
take him to the great healer Quetzal! He can protect my child.@
  170 Csay I must stay here and keep the parrots from stealing the buds.@
 2000 APtha diligently searches the garden for any thieving parrots.@
"
*/

#define PTHA_ONGOING "Child Rescue Ongoing"
#define PTHA_COMPLETE "Child Rescue Complete"

dilbegin ptha1();
var
  pcname   : string;
  item     : unitptr;
  pc       : unitptr;
  i        : integer;
  exdp     : extraptr;

code
{

  :init:
  heartbeat := PULSE_SEC*5;
  on_activation((self.position <= POSITION_SLEEPING) or
               (self.position == POSITION_FIGHTING), skip);

  :start:
  wait(SFB_CMD, (activator.type == UNIT_ST_PC) and (not
      command(CMD_GIVE)));
  if(PTHA_COMPLETE in activator.quests)
   goto waitawhile;

  pc := activator;
  secure(pc, lostpc);

  if(not(PTHA_ONGOING in pc.quests))
    {
     exec("emote bows most humbly towards you, tears welling in her "+
          "eyes.", self);
     pause;
     exec("say Oh, please.... I am in need of a champion! " +
          "They have taken my child from me, and Kuh is going to " +
          "sacrifice him to Ulchonix!  You must save him!", self);
     pause;
     exec("say The sacrifice is at noon.... oh please rescue my "+
          "child and take him to the great healer Quetzal!  He can "+
          "protect my child.", self);
     pause;
     exec("say I must stay here and keep the parrots from "+
          "stealing the buds.", self);
     pause;
     exec("say Can you help me?", self);
     pause;
     exec("say Please nod or shake.", self);

     i := 0;
     while (i < 5)
     {
        wait(SFB_CMD, activator #= pc);

        if(command(CMD_NOD))
        {
          goto quest_accepted;
        }
        else if(command(CMD_SAY))
        {
          pause;
          exec("say Nod if you will accept, shake " +
               "if not.", self);
        }
        else if(command(CMD_SHAKE))
        goto no_quest;
        i := I + 1;
     }

  :no_quest:
  pause;
  exec("say You are no champion.", self);
  unsecure(pc);
  goto waitawhile;

  :quest_accepted:
  pause;
  exec("say I thank thee in advance kind soul.", self);
  pause;
  addextra(pc.quests, {PTHA_ONGOING}, "");
  unsecure(pc);
  goto start;
  }
        :waitawhile:
        heartbeat := PULSE_SEC*60;
        pause;
        goto init;

        :lostpc:
        exec("cry", self);
        pause;
        exec("say My poor child.", self);
        goto start;
}
dilend
end

