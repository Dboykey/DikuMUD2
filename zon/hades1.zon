/* Dil to give power of sight */

dilbegin prg33();
var
	pc		:	unitptr;
	vict		:	unitptr;
	room1		:	string;
	room2		:	string;
	num1		:	integer;
 	div_skill    	:	integer;
	arg		:	string;
code
{
   :init:
   heartbeat := PULSE_SEC*4;

   :start:
   wait(SFB_CMD, ((activator.type == UNIT_ST_PC) and
       (self.outside.name $= activator.name) and
       (self.equip == WEAR_HOLD) and (command("see"))));

   block;
   if (activator.level <= 25)
   {
      act("The Gem requires a level of 25 or higher to use.",
	  A_ALWAYS, activator, null, null, TO_CHAR);
      goto start;
   }

   if (activator.outside.type!=UNIT_ST_ROOM)
   {
	 act ("Your Gem of sight requires more room to work correctly.  Try the Gem "+
	 "while in a room.",
	  A_ALWAYS, activator, null, null, TO_CHAR);
      goto start;
   }


   arg := argument;
   if (not(arg))
   {
       act("To use the sight gem do 'see <playername>'.",
	   A_ALWAYS, activator, null, null, TO_CHAR);
       goto start;
   }

   vict := findunit(activator, arg, FIND_UNIT_GLOBAL, null);
   if (not(vict.type == UNIT_ST_PC))
   {
       act("That person could not be found.",
	   A_ALWAYS, activator, null, null, TO_CHAR);
       goto start;
   }

   if (vict.level > 50)
   {
	act("Gods do not like having their privacy invaded!",
	    A_ALWAYS, activator, null, null, TO_CHAR);
	goto start;
   }

   pc := activator;
   secure(pc, lost_pc);

   num1 := rnd(0, 99);
   div_skill := self.outside.abilities[ABIL_DIV];
   if ((div_skill*num1)/150 >= 20)
   {
      act("The Gem of sight shares its view of the world with you.",
          A_ALWAYS, pc, null, null,TO_CHAR);
      room1 := pc.outside.nameidx+"@"+pc.outside.zoneidx;
      room2 := vict.outside.nameidx+"@"+vict.outside.zoneidx;
      link(pc, findroom(room2));
      exec("look", pc);
      link(pc, findroom(room1));
   }
   else
     act("The Gem cannot utilize your Divine essence sufficiently.",
         A_ALWAYS, pc, null, null,TO_CHAR);

   unsecure(pc);

   :lost_pc:
   goto start;
}
dilend

