/* Dil to simulate a door */

dilbegin prg4();
var
        pc      :       unitptr;
        room    :       unitptr;
code
{
   :start:
   wait(SFB_CMD, ((activator.type == UNIT_ST_PC) and (command(CMD_ENTER)) and
        (("rocky doorway" in argument) or ("doorway in argument") or
	("door" in argument))));

   block;
   pc := activator;
   secure(pc, lost_pc);

   room := findroom("moun_cav27@tiamat");

   act("You enter the door and peer out on the oother side.",
        A_ALWAYS, pc, null, null, TO_CHAR);
   act(pc.name+" enters the door vanishes.",
        A_SOMEONE, pc, null, null, TO_REST);
   link(pc, room);

   unsecure(pc);
   :lost_pc:
   exec("look", pc);

   act(pc.name+" suddenly emerges from the door.",
        A_SOMEONE, pc, null, null, TO_REST);
   goto start;
}
dilend

end



