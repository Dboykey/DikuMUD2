/* Dil to capture the player */
dilbegin prg32();
var
	pc	:	unitptr;
	extra1	:	extraptr;
	extra2	:	extraptr;
        rstring	:	string;
 	num	:	integer;
code
{
   :init:
   heartbeat := PULSE_SEC*5;

   :start:
   wait(SFB_CMD, ((activator.type == UNIT_ST_PC) and
       (activator.level > 40) and (activator.level < 51) and
       (activator.alignment < -700)));

   extra1 := "$status" in self.extra;
   extra2 := "$hunting" in self.extra;

   if (not("withprey" in extra1.descr)) goto start;
   if (not(activator.name in extra2.descr)) goto cleanup;

   pc := activator;
   secure(pc, lost_pc1);
   exec("sit", self);
   if (HELD in pc.quests)
   {
      exec("emote grins at "+pc.name+" and mumbles something softly.", self);
      pause;
      exec("say It appears we have met again eh?", self); pause;
      num := rnd(1, 99);
      if (num > pc.level-25) goto gotcha;
      else
      {
	 subextra(pc.quests, HELD);
	 goto no_gotcha;
      }
   }

   priority;
   act("The Horseman grins with a lifeless smile that makes you cringe. ",
	A_ALWAYS, pc, null, null, TO_CHAR);
   act("The Horseman stares coldly at "+pc.name+", your nerves tingle!",
	A_SOMEONE, pc, null, null, TO_REST);
   HOLD
   act("The clouds overhead darken dramatically, the ground beneath quivers.",
       A_SOMEONE, pc, null, null, TO_ALL);
   HOLD
   act("The Horseman stares at you, you feel his power invade your body.",
	A_ALWAYS, pc, null, null, TO_CHAR);
   act("You feel the Horseman's grim stare cast on "+pc.name+".",
	A_SOMEONE, pc, null, null, TO_REST);
   num := rnd(1,99);

   if (num > pc.level)
   {
      act("You feel yourself losing control of your mind and body, it seems " +
	  "all your attempts are thwarted.",
	  A_ALWAYS, pc, null, null, TO_CHAR);
      addextra(pc.quests, {HELD}, "");
      HOLD
      act("You grimly realize your soul is being controlled by the Horseman.",
	  A_ALWAYS, pc, null, null, TO_CHAR);
      act(pc.name+" drops to the ground, obviously in extreme pain.",
	  A_SOMEONE, pc, null, null, TO_REST);
      HOLD
      :gotcha:
      unsecure(pc);
      secure(pc, come_here1);
      rstring := pc.outside.zoneidx+"/"+pc.outside.nameidx;
      act(pc.name+" is dragged down beneath the surface by the Horseman." +
	  "By the time you realize what has happened it is too late.",
	  A_SOMEONE, pc, null, null, TO_REST);
      act("You have been dragged down beneath the surface by the " +
           "Horseman, the heat intensifies noticably as you descend." +
           " It appears the Horseman has left you here.",
           A_ALWAYS, pc, null, null, TO_CHAR);
      link(pc, findroom("under_ground1@hades5"));
   }else{
	:no_gotcha:
	act("You feel the Horseman's intellect working its way into your head.",
	    A_ALWAYS, pc, null, null, TO_CHAR);
	act(pc.name+" shouts in pain, fighting to keep control!",
	    A_SOMEONE, pc, null, null, TO_REST);
        HOLD
 	pc.hp := pc.hp - (pc.hp / 2);
        act("All at once the pain intensifies into a cacophony of exquisite " +
	    "agony and then vanishes.",
	    A_ALWAYS, pc, null, null, TO_CHAR);
        act("The mental anguish "+pc.name+" suffers is clearly visible now.",
            A_SOMEONE, pc, null, null, TO_REST);
        unsecure(pc);
	goto cleanup;
   }

   :come_here1:
   link(self, findroom("hades5/under_ground1"));
   exec("cackle", self); pause;
   exec("say Enjoy your stay mortal!", self);
   exec("emote is engrossed in a dark ominous cloud, together they " +
	 "vanish.", self);
   link(self, findroom(rstring));
   act("The Horseman emerges from the ground empty handed.",
	A_ALWAYS, self, null, null, TO_ALL);
   exec("stand", self);
   goto cleanup;

   :lost_pc1:
   exec("stand", self);
   goto start;

   :lost_pc:
   subextra(self.extra, "$status");
   addextra(self.extra, {"$status"}, "vacant");
   subextra(self.extra, "$hunting");
   addextra(self.extra, {"$hunting"}, "noone");
   nopriority;
   exec("stand", self);
   goto start;

   :cleanup:
   HOLD
   subextra(self.extra, "$status");
   subextra(self.extra, "$hunting");
   addextra(self.extra, {"$hunting"}, "noone");
   addextra(self.extra, {"$status"}, "vacant");
   nopriority;
   exec("stand", self);
   goto start;

}
dilend

